<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".MainActivity">

    <!-- Expression on top -->
    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <!-- Result below expression -->
    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="42sp"
        android:textColor="@android:color/black"
        android:gravity="end"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/solution_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== ROW 1: 7 8 9 / ===== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="7"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/result_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="8"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_9"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="9"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintEnd_toStartOf="@id/button_divide"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_divide"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="/"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"/>

    <!-- ===== ROW 2: 4 5 6 + ===== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="4"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_5"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="5"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintEnd_toStartOf="@id/button_6"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="6"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintEnd_toStartOf="@id/button_plus"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="+"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"/>

    <!-- ===== ROW 3: 1 2 3 C ===== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="1"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="2"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintEnd_toStartOf="@id/button_C"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_C"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="C"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#F44336"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"/>

    <!-- ===== ROW 4: AC 0 = [placeholder] ===== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_AC"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="AC"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#CF1313"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="0"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/button_AC"
        app:layout_constraintStart_toEndOf="@id/button_AC"
        app:layout_constraintEnd_toStartOf="@id/button_equals"
        android:layout_margin="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="="
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#3F51B5"
        app:layout_constraintTop_toTopOf="@id/button_AC"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintEnd_toStartOf="@id/space_r4c4"
        android:layout_margin="6dp"/>

    <!-- A placeholder to keep the 4-column chain balanced -->
    <View
        android:id="@+id/space_r4c4"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/button_AC"
        app:layout_constraintStart_toEndOf="@id/button_equals"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
